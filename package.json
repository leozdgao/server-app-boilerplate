{
  "name": "webpack-project",
  "version": "0.1.0",
  "description": "template for webpack based web page project",
  "main": "index.js",
  "scripts": {
    "start": "node bin/www",
    "dev": "better-npm-run dev",
    "prod": "better-npm-run prod",
    "start-dev-web-server": "better-npm-run start-dev-web-server",
    "test": "mocha"
  },
  "betterScripts": {
    "dev": {
      "command": "npm run start-dev-web-server",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod": {
      "command": "npm run build && npm run start-web-server",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "webpack --config config/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-dev-web-server": {
      "command": "nodemon -e js,jsx,json --ignore ./server/views --delay 2.5 bin/www",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start-web-server": {
      "command": "node bin/www",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "leozdgao",
  "repository": "https://github.com/leozdgao/server-app-boilerplate.git",
  "license": "MIT",
  "devDependencies": {
    "assets-webpack-plugin": "^3.2.0",
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "better-npm-run": "0.0.5",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.3",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.5",
    "less": "^2.5.3",
    "less-loader": "^2.2.2",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "fs-promise": "^0.3.1",
    "lodash": "^3.10.1",
    "walk": "^2.3.9"
  },
  "engines": {
    "node": ""
  }
}
